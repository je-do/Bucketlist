{% extends 'base.html.twig' %}


{% block titre %}
{{ titre }} | {{ parent() }}
{% endblock %}


{% block main %}
<br>
<div class="container">
        <!-- etape 2 ouverture de ligne -->
        <div class="row">
            <!-- etape 3  -->
            
            <h1>Ma liste de voyages</h1>
            
            <div class=" col-6">
            <br>
                <table class="table table-striped"> {#pour avoir des couleurs différentes à chaque ligne#}
                    <thead>
                        <tr bgcolor="#87CEEB">
                            <th>Pays</th>
                            <th>Activité</th>
                            <th>Date départ</th>
                            <th>Budget</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for b in bucketlist %}
                        <tr>
                            <td align="center">{{b.pays}}</td>
                            <td align="center">{{b.activite}}</td>
                            <td align="center">{{b.date}}</td>
                            <td align="center">{{b.budget}}</td>

                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr  bgcolor="#87CEEB" align="center">
                            <th colspan="3">Total budget:</th>
                            <th colspan="1">$$$</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>





{% endblock %}